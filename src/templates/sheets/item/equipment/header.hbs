{{! Sheet Header }}
<header class="sheet-header flexrow">
	<img
		class="profile-img"
		src="{{document.img}}"
		alt="{{document.name}}"
		data-action="{{ifThen isPlay 'showPortraitArtwork' 'editImage'}}"
		data-edit="img"
		title="{{document.name}}"
	/>
	<div class="core-info flexcol">
		{{formGroup fields.name name="name" value=document._source.name disabled=isPlay}}
		<div class="flexrow">
			{{#each qrebsFields as |field key|}}
				<div class="qrebs-field form-group">
					<label>{{field.field.label}}</label>
					<div class="form-fields">
						{{#if (eq field.field.name "quality")}}
							{{formInput field.field value=field.value disabled=@root.isPlay}}
						{{else}}
							{{formInput field.field value=field.value type="number" disabled=@root.isPlay}}
						{{/if}}
					</div>
				</div>
			{{/each}}
		</div>
		<div class="flexrow">
			<div class="form-group">
				<label>{{systemFields.cost.label}}</label>
				<div class="form-fields">
					{{formInput systemFields.cost value=systemSource.cost disabled=isPlay}}
					<label class="inline">{{localize "TRAVELLER.Currency.Credits"}}</label>
				</div>
			</div>
			<div class="form-group">
				<label>{{systemFields.mass.label}}</label>
				<div class="form-fields">
					{{formInput systemFields.mass value=systemSource.mass disabled=isPlay}}
					<label class="inline">{{localize "TRAVELLER.Mass.Kilograms"}}</label>
				</div>
			</div>
		</div>
	</div>
</header>
